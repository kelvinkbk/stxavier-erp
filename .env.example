# St. Xavier ERP - Environment Configuration
# Copy this file to .env and update with your actual values

# üî• Firebase Configuration (Free Tier)
EXPO_PUBLIC_FIREBASE_API_KEY=your_api_key_here
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=your_app_id

# üåê Vercel Deployment (Free Tier)
VERCEL_TOKEN=your-vercel-token-here
VERCEL_ORG_ID=your-org-id
VERCEL_PROJECT_ID=your-project-id

# üöÄ Application Configuration
EXPO_PUBLIC_API_URL=https://your-backend-api.com
EXPO_PUBLIC_VERSION=1.0.0
EXPO_PUBLIC_APP_NAME=St. Xavier ERP
EXPO_PUBLIC_APP_SLUG=stxavier-erp

# üõ°Ô∏è Security Configuration
EXPO_PUBLIC_ENVIRONMENT=development
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_SECURITY_LEVEL=standard

# üìä Features & Monitoring
EXPO_PUBLIC_ANALYTICS_ENABLED=false
EXPO_PUBLIC_PERFORMANCE_MONITORING=true
EXPO_PUBLIC_ERROR_REPORTING=true
EXPO_PUBLIC_FEATURES_BULK_OPERATIONS=true
EXPO_PUBLIC_FEATURES_ADVANCED_SECURITY=true
EXPO_PUBLIC_FEATURES_REAL_TIME_SYNC=true

# üì± Mobile Configuration
EXPO_PUBLIC_IOS_BUNDLE_ID=com.stxavier.erp
EXPO_PUBLIC_ANDROID_PACKAGE=com.stxavier.erp

# üåç Internationalization
EXPO_PUBLIC_DEFAULT_LANGUAGE=en
EXPO_PUBLIC_SUPPORTED_LANGUAGES=en,hi

# üìß Support Configuration
EXPO_PUBLIC_SUPPORT_EMAIL=support@stxavier-erp.com
EXPO_PUBLIC_FEEDBACK_URL=https://github.com/kelvinkbk/stxavier-erp/issues

# üîß Development Configuration
EXPO_PUBLIC_DEV_SERVER_PORT=8081
EXPO_PUBLIC_TUNNEL_ENABLED=true
EXPO_PUBLIC_CACHE_ENABLED=true

# Note: All EXPO_PUBLIC_ variables are exposed to the client
# Never put sensitive secrets in EXPO_PUBLIC_ variables
